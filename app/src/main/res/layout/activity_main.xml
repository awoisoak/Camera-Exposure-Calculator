<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.awoisoak.exposure.presentation.MainActivity">

    <SeekBar
        android:id="@+id/seekBar_nd_stops"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:max="10"

        android:paddingLeft="32dp"
        android:paddingStart="32dp"
        android:paddingEnd="20dp"
        android:progress="3"
        android:thumb="@drawable/stops_48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_nd_stops"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_nd_iso"/>
    <SeekBar
        android:id="@+id/seekBar_nd_iso"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:max="10"
        android:paddingEnd="20dp"
        android:paddingStart="32dp"

        android:progress="3"
        android:thumb="@drawable/iso_56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_nd_iso"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_nd_aperture" android:paddingRight="20dp"
        android:paddingLeft="32dp"/>
    <SeekBar
        android:id="@+id/seekBar_aperture"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:max="10"
        android:paddingEnd="16dp"
        android:paddingLeft="32dp"

        android:paddingRight="16dp"
        android:paddingStart="32dp"
        android:progress="3"
        android:thumb="@drawable/aperture_56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_aperture"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_exposure2"/>
    <SeekBar
        android:id="@+id/seekBar_shutter"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:max="10"
        android:paddingEnd="24dp"
        android:paddingStart="32dp"

        android:progress="3"
        android:thumb="@drawable/speed_48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_speed"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_aperture"
        tools:layout_editor_absoluteY="85dp" android:paddingRight="24dp"
        android:paddingLeft="32dp"/>
    <SeekBar
        android:id="@+id/seekBar_nd_aperture"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:max="10"
        android:paddingEnd="16dp" android:paddingStart="32dp"

        android:progress="3"
        android:thumb="@drawable/aperture_56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_nd_aperture"
        app:layout_constraintTop_toBottomOf="@+id/tv__nd_exposure" android:paddingRight="16dp"/>
    <TextView
        android:id="@+id/tv__nd_exposure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ND Exposure"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_iso" android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/tv_current_exposure2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:text="Base Exposure"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_final_shutter_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="2m 30s"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nd_stops" android:layout_marginLeft="8dp"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_final_shutter_speed"
        app:layout_constraintTop_toBottomOf="@+id/tv_nd_stops" android:layout_marginRight="8dp"
        android:layout_marginLeft="32dp"/>
    <TextView
        android:id="@+id/tv_aperture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_exposure2"
        android:layout_marginLeft="8dp"/>
    <SeekBar
        android:id="@+id/seekBar_iso"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:max="10"
        android:paddingEnd="20dp" android:paddingStart="32dp"

        android:progress="3"
        android:thumb="@drawable/iso_56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_iso"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_shutter" android:paddingRight="20dp"
        android:paddingLeft="32dp"/>
    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="32dp" android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_aperture"
        tools:layout_editor_absoluteX="8dp" android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/tv_iso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="32dp" android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_speed" android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/tv_nd_aperture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv__nd_exposure" android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/tv_nd_iso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="32dp" android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nd_aperture"
        tools:layout_editor_absoluteX="8dp" android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/tv_nd_stops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="32dp" android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nd_iso"
        tools:layout_editor_absoluteX="0dp" android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>
